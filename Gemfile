source 'http://rubygems.org'

ruby "2.0.0"

# Use Sinatra
gem 'sinatra', '~> 1.4.6'
# User sinatra-contrib to reload in dev mode
gem 'sinatra-contrib', '~> 1.4.2'

# Use to provide support for Cross-Origin Resource Sharing (CORS) with Rack
gem 'rack-cors', '~> 0.4.0', require: 'rack/cors'

# EventMachine implements a fast, single-threaded engine for arbitrary network communications.
gem 'eventmachine', '~> 1.0.7'

# A fast and very simple Ruby web server
gem 'thin', '~> 1.6.3'

# A simple Rack middleware to enforce ssl connections
#gem 'rack-ssl-enforcer', '~> 0.2.8', require: 'rack/ssl-enforcer'